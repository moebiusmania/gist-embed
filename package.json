{
  "name": "gist-embed",
  "version": "1.0.0",
  "description": "Web component for easily embed a GitHub Gist in your webpages. ",
  "main": "src/index.js",
  "repository": "https://github.com/moebiusmania/gist-embed",
  "author": "Salvatore Laisa <moebiusmania@gmail.com>",
  "license": "MIT",
  "ava": {
    "require": [
      "babel-register",
      "./test/helpers/browser"
    ],
    "babel": "inherit"
  },
  "scripts": {
    "start": "concurrently -k \"http-server ./demo -s -p 8081\" \"webpack -w \" ",
    "build": "webpack",
    "test": "ava --timeout=30s ./test/index.js",
    "deploy": "gh-pages -d demo"
  },
  "dependencies": {
    "@polymer/polymer": "next",
    "fetch-jsonp": "^1.1.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-env": "^3.2.0",
    "concurrently": "^3.5.0",
    "gh-pages": "^1.0.0",
    "http-server": "^0.10.0",
    "text-loader": "^0.0.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.5.5",
    "webpack-notifier": "^1.5.0"
  }
}
